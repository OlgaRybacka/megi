.menu
  %ul.ul-menu
    %li
      %a.li-a-first{:href => "#aktualnosci"} aktualnosci
    %li
      %a{:href => "#sklep"} sklep
    %li
      %a{:href => "#koszyk"} koszyk
    %li
      %a{:href => "#o_mnie"} o mnie
    %li
