= form_for @package do |f|
  -if @package.errors.any?
    #error_explanation
      %h2= "#{pluralize(@package.errors.count, "error")} prohibited this package from being saved:"
      %ul
        - @package.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
